<?xml version="1.0"?>
<robot name="acrobot">

  <!-- Define the base link -->
  <link name="base_link">

    <!-- Visual representation of the base -->
    <visual>
      <geometry>
        <box size="0.2 0.2 0.2" />
      </geometry>
    </visual>

    <!-- Collision representation of the base -->
    <collision>
      <geometry>
        <box size="0.2 0.2 0.2" />
      </geometry>
    </collision>

    <!-- Inertial properties of the base -->
    <inertial>
      <mass value="1.0" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
      <origin rpy="0 0 0" xyz="0 0 0" />
    </inertial>

  </link>

  <!-- Include the first link -->
  <include filename="acrobot_link1.urdf" />

  <!-- Include the second link -->
  <include filename="acrobot_link2.urdf" />

</robot>